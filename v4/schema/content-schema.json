{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://json-schema.org/draft/2019-09/output/schema",
  "description": "A schema that validates the structure of a Content",

  "type": "object",
  "required": [
    "contentTypeId",
    "id",
    "name",
    "type",
    "path",
    "versions"
  ],

  "properties": {

    "type": { "enum": [ "Content", "Folder", "Template", "Boolean" ] },

    "contentTypeId": {
      "type": "string"
    },

    "id": {
      "type": "string"
    },

    "name": {
      "type": "string"
    },

    "path": {
      "type": "string"
    },

    "site": {
      "type": "string"
    },

    "systemProperties": {
      "type": "object",
      "$ref": "#/definitions/systemProperties"
    },

    "creationDate": {
      "type": "string"
    },
    "modificationDate": {
      "type": "string"
    },

    "versions": {
      "type": "array",
      "items": {
        "$ref": "version-schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },

  },

  "definitions": {

    "systemProperties" : {
      "properties" : {
        "items" : {
          "type": "array"
        }
      }
    }

  }

}