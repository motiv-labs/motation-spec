{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://json-schema.org/draft/2019-09/output/schema",
  "description": "A schema that validates the structure of a Content Type",

  "type": "object",
  "required": [ "id","properties","fields" ],

  "properties": {

    "id": {
      "type": "string"
    },

    "properties": {
      "type": "object",
      "$ref": "#/definitions/properties"
    },

    "fields": {
      "type": "array",
      "items": {
        "$ref": "mtype-schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },

  "definitions": {

    "id": {
      "required": ["value"],
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },

    "properties": {
      "required": [
        "name"
      ],
      "properties": {
        "uniqueName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        },

        "parent": {
          "type": "object",
          "oneOf": [
            { "$ref": "#/definitions/parent/Site" },
            { "$ref": "#/definitions/parent/Folder" }
          ]
        },

        "metadata": {
          "type": "object",
          "$ref": "#/definitions/metadata"
        },

        "systemProperties": {
          "type": "object",
          "$ref": "#/definitions/systemProperties"
        }
      }
    },

    "parent": {
      "Site": {
        "properties": {
          "type": {
            "enum": [
              "Site"
            ]
          },
          "id": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "id"
        ],
        "additionalProperties": false
      },
      "Folder": {
        "properties": {
          "type": {
            "enum": [
              "Folder"
            ]
          },
          "id": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "id"
        ],
        "additionalProperties": false
      }
    },
    "metadata" : {
      "properties" : {
        "items" : {
          "type": "array"
        }
      }
    },
    "systemProperties" : {
      "properties" : {
        "items" : {
          "type": "array"
        }
      }
    }

  }

}