{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Motation dependencies",
  "type": "object",
  "properties": {
    "languages": {
      "type": "array",
      "items": {
        "$ref": "#dep-language"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "items": {
        "$ref": "#dep-tag"
      },
      "uniqueItems": true
    },
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#dep-category"
      },
      "uniqueItems": true
    },
    "relationships": {
      "type": "array",
      "items": {
        "$ref": "#dep-relationship"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "relationship": {
      "$id": "#dep-relationship",
      "required": [
        "parent",
        "child"
      ],
      "properties": {
        "parent": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "child": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        }
      }
    },
    "category": {
      "$id": "#dep-category",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "uniqueName": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "system": {
              "type": "object",
              "$ref": "./common-schema.json#/definitions/system"
            },
            "modificationDate": {
              "type": "string"
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#dep-category"
          },
          "uniqueItems": true
        }
      }
    },
    "tag": {
      "$id": "#dep-tag",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "system": {
          "type": "object",
          "$ref": "./common-schema.json#/definitions/system"
        },
        "modificationUser": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "uniqueItems": true
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "language": {
      "$id": "#dep-language",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "language": {
          "type": "string"
        },
        "languageCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "countryCode": {
          "type": "string"
        }
      }
    }
  }
}