{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Language Motation dependency file",
  "$id": "language-schema.json",
  "type": "object",
  "required": [
    "languages"
  ],
  "properties": {
    "languages": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "name",
          "code"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "countryCode": {
            "type": "string"
          },
          "countryName": {
            "type": "string"
          }
        }
      }
    }
  }
}