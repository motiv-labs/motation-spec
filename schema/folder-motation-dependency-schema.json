{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Folder Motation dependency file",
  "$id": "folder-schema.json",
  "type": "object",
  "required": [
    "folders"
  ],
  "properties": {
    "folders": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "path"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "path": {
            "type": "string"
          }
        }
      }
    }
  }
}