{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Language Motation Object file",
  "$id": "full-relationship-schema.json",
  "type": "object",
  "required": [
    "systems",
    "contents",
    "audit",
    "key"
  ],
  "properties": {
    "systems": {
      "type": "array",
      "items": {
        "$ref": "#global-system"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "contents": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "#content-field"
          },
          {
            "$ref": "content-schema.json"
          }
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "audit": {
      "type": "array",
      "items": {
        "$ref": "#global-audit"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "key": {
      "required": [
        "fields"
      ],
      "properties": {
        "fields": {
          "type": "array",
          "required": [
            "name",
            "id"
          ],
          "items": {
            "$ref": "#key-field"
          },
          "allOf": [
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "uniqueName"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "parentId"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "childId"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "childName"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "cardinality"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "type": "string",
                    "const": "relations"
                  }
                }
              }
            }
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "minItems": 6,
          "uniqueItems": true
        }
      }
    }
  },
  "definitions": {
    "content-field": {
      "$id": "#content-field",
      "properties": {
        "versions": {
          "type": "array",
          "items": {
            "properties": {
              "id": {
                "type": "array"
              },
              "fields": {
                "type": "array",
                "minItems": 6
              }
            }
          }
        }
      }
    },
    "version-field": {
      "$id": "#version-field",
      "properties": {}
    },
    "system": {
      "$id": "#global-system",
      "required": [
        "name",
        "date"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "audit": {
      "$id": "#global-audit",
      "required": [
        "date"
      ],
      "properties": {
        "user": {
          "type": "object",
          "$ref": "#global-user"
        },
        "date": {
          "type": "string"
        }
      }
    },
    "user": {
      "$id": "#global-user",
      "properties": {
        "id": {
          "type": "object",
          "$ref": "common-schema.json#/definitions/id"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "key-field": {
      "$id": "#key-field",
      "required": [
        "name",
        "id"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "array",
          "items": {
            "$ref": "common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  }
}