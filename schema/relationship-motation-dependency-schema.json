{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Relationship Motation dependency file",
  "$id": "relationship-schema.json",
  "type": "object",
  "required": [
    "relationships",
    "key",
    "audit",
    "systems"
  ],
  "properties": {
    "relationships": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "definition1FieldId",
          "definition2FieldId",
          "cardinality",
          "definition1Id",
          "definition2Id"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "definition1FieldId": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "definition2FieldId": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "definition1FieldName": {
            "type": "string"
          },
          "definition2FieldName": {
            "type": "string"
          },
          "cardinality": {
            "enum": [
              "ManyToMany",
              "OneToMany",
              "ManyToOne",
              "OneToOne"
            ]
          },
          "definition1Id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "definition2Id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "system": {
            "type": "object"
          }
        }
      }
    },
    "key": {
      "type": "object",
      "required": [
        "fields"
      ],
      "properties": {
        "fields": {
          "type": "array",
          "required": [
            "name",
            "id"
          ],
          "items": {
            "properties": {
              "name": {
                "type": "string"
              },
              "id": {
                "type": "array",
                "items": {
                  "$ref": "common-schema.json#/definitions/keyId"
                }
              }
            }
          },
          "allOf": [
            {
              "contains": {
                "properties": {
                  "name": {
                    "const": "definition1FieldId"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "const": "definition2FieldId"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "const": "cardinality"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "const": "definition1Id"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "name": {
                    "const": "definition2Id"
                  }
                }
              }
            }
          ],
          "minItems": 5,
          "uniqueItems": true
        }
      }
    },
    "systems": {
      "type": "array",
      "items": {
        "$ref": "common-schema.json#/definitions/systems"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "audit": {
      "type": "array",
      "items": {
        "$ref": "common-schema.json#/definitions/audit"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  }
}