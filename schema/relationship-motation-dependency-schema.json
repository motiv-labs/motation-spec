{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Relationship Motation dependency file",
  "$id": "relationship-schema.json",
  "type": "object",
  "required": [
    "relationships"
  ],
  "properties": {
    "relationships": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "name",
          "childName",
          "cardinality",
          "parentDefinitionId",
          "childDefinitionId"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "childName": {
            "type": "string"
          },
          "cardinality": {
            "type": "string"
          },
          "parentDefinitionId": {
            "type": "string"
          },
          "childDefinitionId": {
            "type": "string"
          }
        }
      }
    }
  }
}