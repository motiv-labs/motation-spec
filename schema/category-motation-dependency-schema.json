{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Category Motation dependency file",
  "$id": "category-schema.json",
  "type": "object",
  "required": [
    "categories"
  ],
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "name",
          "order"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "order": {
            "type": "integer"
          },
          "children": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}