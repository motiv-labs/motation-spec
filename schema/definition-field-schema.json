{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Motation Content",
  "$id": "http://example.com/schemas/definitionContentSchema.json",
  "required": [
    "properties",
    "fields"
  ],
  "properties": {
    "id": {
      "type": "array",
      "items": {
        "$ref": "./common-schema.json#/definitions/id"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "$ref": "#def-properties"
    },
    "fields": {
      "type": "array",
      "items": {
        "$ref": "#def-field"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "definitions": {
    "properties": {
      "$id": "#def-properties",
      "required": [
        "uniqueName",
        "type",
        "motationType"
      ],
      "properties": {
        "motationType": {
          "type": "string"
        },
        "uniqueName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "Content",
            "Widget",
            "Form",
            "File",
            "Page",
            "Persona",
            "MotationObject"
          ]
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        },
        "parent": {
          "type": "object",
          "$ref": "#def-parent"
        },
        "metadata": {
          "type": "object",
          "$ref": "./common-schema.json#/definitions/metadata"
        },
        "system": {
          "type": "object",
          "$ref": "./common-schema.json#/definitions/system"
        }
      }
    },
    "parent": {
      "$id": "#def-parent",
      "properties": {
        "type": {
          "enum": [
            "Site",
            "Folder"
          ]
        },
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "type",
        "id"
      ],
      "additionalProperties": false
    },
    "fullMetadata": {
      "$id": "#def-fullMetadata",
      "required": [
        "key",
        "value"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "validation": {
      "$id": "#def-validation",
      "properties": {
        "name": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "minLength": {
          "type": "number"
        },
        "maxLength": {
          "type": "number"
        },
        "regex": {
          "type": "string"
        }
      }
    },
    "constraint": {
      "$id": "#def-constraint",
      "properties": {
        "unique": {
          "type": "boolean"
        },
        "readOnly": {
          "type": "boolean"
        },
        "fixed": {
          "type": "boolean"
        }
      }
    },
    "display": {
      "$id": "#def-display",
      "properties": {
        "showInList": {
          "type": "boolean"
        },
        "searchable": {
          "type": "boolean"
        },
        "hint": {
          "type": "string"
        }
      }
    },
    "dataType": {
      "$id": "#def-dataType",
      "enum": [
        "String",
        "BigString",
        "Boolean",
        "Int",
        "BigInt",
        "Float",
        "Date",
        "Time",
        "DateTime"
      ]
    },
    "field": {
      "$id": "#def-field",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "fieldType",
            "name"
          ],
          "properties": {
            "dataType": {
              "type": "string",
              "$ref": "#def-dataType"
            },
            "fieldType": {
              "enum": [
                "Text",
                "Category",
                "Checkbox",
                "Constant",
                "Custom",
                "Date",
                "Datetime",
                "File",
                "Hidden",
                "Site",
                "Image",
                "KeyValue",
                "Divider",
                "Select",
                "Multiselect",
                "Tab",
                "Radio",
                "Relationship",
                "RelationshipTab",
                "Permission",
                "Tag",
                "Textarea",
                "Binary",
                "Time",
                "WYSIWYG",
                "Row",
                "Column",
                "Array",
                "DefinitionFieldProperties"
              ]
            },
            "validations": {
              "type": "array",
              "items": {
                "$ref": "#def-validation"
              },
              "uniqueItems": true
            },
            "constraints": {
              "type": "array",
              "items": {
                "$ref": "#def-constraint"
              },
              "uniqueItems": true
            },
            "display": {
              "type": "array",
              "items": {
                "$ref": "#def-display"
              },
              "uniqueItems": true
            },
            "system": {
              "type": "object",
              "$ref": "./common-schema.json#/definitions/system"
            },
            "metadata": {
              "type": "array",
              "items": {
                "$ref": "#def-fullMetadata"
              },
              "uniqueItems": true
            },
            "uniqueName": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "description": {
              "type": "string"
            },
            "setUpData": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "defaultValue": {
              "type": "string"
            },
            "creationDate": {
              "type": "string"
            },
            "modificationDate": {
              "type": "string"
            }
          }
        }
      }
    },
    "fieldProperties": {
      "$id": "#def-fieldProperties",
      "required": [
        "fieldType",
        "name"
      ],
      "properties": {
        "dataType": {
          "type": "string",
          "$ref": "#def-dataType"
        },
        "fieldType": {
          "enum": [
            "Text",
            "Category",
            "Checkbox",
            "Constant",
            "Custom",
            "Date",
            "Datetime",
            "File",
            "Hidden",
            "Site",
            "Image",
            "KeyValue",
            "Divider",
            "Select",
            "Multiselect",
            "Tab",
            "Radio",
            "Relationship",
            "RelationshipTab",
            "Permission",
            "Tag",
            "Textarea",
            "Binary",
            "Time",
            "WYSIWYG",
            "Row",
            "Column",
            "Array"
          ]
        },
        "validations": {
          "type": "array",
          "items": {
            "$ref": "#def-validation"
          },
          "uniqueItems": true
        },
        "constraints": {
          "type": "array",
          "items": {
            "$ref": "#def-constraint"
          },
          "uniqueItems": true
        },
        "display": {
          "type": "array",
          "items": {
            "$ref": "#def-display"
          },
          "uniqueItems": true
        },
        "system": {
          "type": "object",
          "$ref": "./common-schema.json#/definitions/system"
        },
        "metadata": {
          "type": "array",
          "items": {
            "$ref": "#def-fullMetadata"
          },
          "uniqueItems": true
        },
        "uniqueName": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "setUpData": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "defaultValue": {
          "type": "string"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    }
  }
}