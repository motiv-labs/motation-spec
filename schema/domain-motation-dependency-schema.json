{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Domain Motation dependency file",
  "$id": "full-domain-schema.json",
  "type": "object",
  "required": [
    "domains"
  ],
  "properties": {
    "domains": {
      "type": "array",
      "items": {
        "required": [
          "id",
          "name",
          "URI"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "name": {
            "type": "string"
          },
          "URI": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          },
          "aliases": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "systemDomain": {
            "type": "boolean"
          },
          "defaultDomain": {
            "type": "boolean"
          }
        }
      }
    }
  }
}