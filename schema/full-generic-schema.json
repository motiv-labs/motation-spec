{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Motation file",
  "type": "object",
  "required": [
    "systems",
    "contents",
    "audit",
    "key"
  ],
  "properties": {
    "motationType": {
      "type": "string",
      "const": "generic"
    },
    "systems": {
      "type": "array",
      "items": {
        "$ref": "#global-system"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "dependencies": {
      "type": "object",
      "$ref": "dependencies-schema.json"
    },
    "definition": {
      "type": "object",
      "$ref": "definition-field-schema.json"
    },
    "contents": {
      "type": "array",
      "items": {
        "$ref": "content-schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "audit": {
      "type": "array",
      "items": {
        "$ref": "#global-audit"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "key": {
      "required": [
        "fields"
      ],
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#key-field"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  },
  "definitions": {
    "system": {
      "$id": "#global-system",
      "required": [
        "name",
        "date"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "audit": {
      "$id": "#global-audit",
      "required": [
        "date"
      ],
      "properties": {
        "user": {
          "type": "object",
          "$ref": "#global-user"
        },
        "date": {
          "type": "string"
        }
      }
    },
    "user": {
      "$id": "#global-user",
      "properties": {
        "id": {
          "type": "object",
          "$ref": "common-schema.json#/definitions/id"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "key-field": {
      "$id": "#key-field",
      "required": [
        "name",
        "id"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "array",
          "items": {
            "$ref": "common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  }
}