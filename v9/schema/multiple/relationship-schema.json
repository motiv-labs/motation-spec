{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Category Motation Object",
  "type": "object",
  "required": [
    "relationships"
  ],
  "id": {
    "type": "array",
    "items": {
      "$ref": "./common-schema.json#/definitions/id"
    },
    "uniqueItems": true
  },
  "relationships": {
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "required": [
        "id",
        "properties",
        "relations"
      ],
      "properties": {
        "type": "object",
        "required": [
          "name"
        ],
        "uniqueName": {
          "type": "string"
        },
        "parentId": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "uniqueItems": true
        },
        "childId": {
          "type": "array",
          "items": {
            "$ref": "./common-schema.json#/definitions/id"
          },
          "uniqueItems": true
        },
        "childName": {
          "type": "string"
        },
        "cardinality": {
          "type": "string"
        }
      },
      "relations": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "parent": {
            "type": "array",
            "items": {
              "$ref": "./common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "child": {
            "type": "array",
            "items": {
              "$ref": "./common-schema.json#/definitions/id"
            },
            "uniqueItems": true
          },
          "order": {
            "type": "integer"
          }
        }
      }
    }
  }
}