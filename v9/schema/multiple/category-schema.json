{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Category Motation Object",
  "type": "object",
  "required": [
    "id",
    "categories"
  ],
  "id": {
    "type": "array",
    "items": {
      "$ref": "./common-schema.json#/definitions/id"
    },
    "uniqueItems": true
  },
  "categories": {
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "required": [
        "id",
        "properties",
        "children"
      ],
      "id": {
        "type": "array",
        "items": {
          "$ref": "./common-schema.json#/definitions/id"
        },
        "uniqueItems": true
      }
    },
    "properties": {
      "type": "object",
      "required": [
        "name"
      ],
      "name": {
        "type": "string"
      },
      "uniqueName": {
        "type": "string"
      },
      "order": {
        "type": "integer"
      },
      "modificationDate": {
        "type": "string"
      }
    },
    "children": {
      "id": {
        "type": "array",
        "items": {
          "$ref": "./common-schema.json#/definitions/id"
        },
        "uniqueItems": true
      },
      "properties": {
        "type": "object",
        "required": [
          "name"
        ],
        "name": {
          "type": "string"
        },
        "uniqueName": {
          "type": "string"
        },
        "order": {
          "type": "integer"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    }
  }
}