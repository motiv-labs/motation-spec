{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Langauge Motation Object",
  "type": "object",
  "required": [
    "languages"
  ],
  "id": {
    "type": "array",
    "items": {
      "$ref": "./common-schema.json#/definitions/id"
    },
    "uniqueItems": true
  },
  "languages": {
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "required": [
        "id",
        "languageId"
      ],
      "id": {
        "type": "array",
        "items": {
          "$ref": "./common-schema.json#/definitions/id"
        },
        "uniqueItems": true
      },
      "languageId": {
        "type": "array",
        "items": {
          "$ref": "./common-schema.json#/definitions/id"
        },
        "uniqueItems": true
      }
    }
  }
}