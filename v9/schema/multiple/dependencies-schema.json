{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Motation dependencies",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string"
        },
        "definition": {
          "type": "string"
        },
        "languages": {
          "type": "string"
        },
        "tags": {
          "type": "string"
        },
        "categories": {
          "type": "string"
        },
        "relationships": {
          "type": "string"
        },
        "folders": {
          "type": "string"
        }
      }
    }
  }
}