{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Category Motation Object",
  "type": "object",
  "required": [
    "id",
    "tags"
  ],
  "id": {
    "type": "array",
    "items": {
      "$ref": "./common-schema.json#/definitions/id"
    },
    "uniqueItems": true
  },
  "tags": {
    "type": "array",
    "minItems": 1,
    "items": {
      "type": "object",
      "required": [
        "id",
        "name"
      ],
      "id": {
        "type": "array",
        "items": {
          "$ref": "./common-schema.json#/definitions/id"
        },
        "uniqueItems": true
      }
    },
    "name": {
      "type": "string"
    },
    "site": {
      "type": "string"
    },
    "modificationDate": {
      "type": "string"
    }
  }
}