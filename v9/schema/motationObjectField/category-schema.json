{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Category Motation Object Field",
  "type": "object",
  "properties": {
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#dep-category"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "category": {
      "$id": "#dep-category",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "../multiple/common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "uniqueName": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "system": {
              "type": "object",
              "$ref": "../multiple/common-schema.json#/definitions/system"
            },
            "modificationDate": {
              "type": "string"
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#dep-category"
          },
          "uniqueItems": true
        }
      }
    }
  }
}