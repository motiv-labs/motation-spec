{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Language Motation Object Field",
  "type": "object",
  "properties": {
    "languages": {
      "type": "object",
      "$ref": "#dep-language",
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "definitions": {
    "language": {
      "$id": "#dep-language",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "../multiple/common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "language": {
          "type": "string"
        },
        "languageCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "countryCode": {
          "type": "string"
        }
      }
    }
  }
}