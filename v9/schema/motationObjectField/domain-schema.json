{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Domain Motation Object Field",
  "type": "object",
  "properties": {
    "domains": {
      "type": "object",
      "$ref": "#dep-domain"
    }
  },
  "definitions": {
    "domain": {
      "$id": "#dep-domain",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "../multiple/common-schema.json#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "type": "object",
          "required": [
            "domainName",
            "uniqueName"
          ],
          "properties": {
            "domainName": {
              "type": "string"
            },
            "uniqueName": {
              "type": "string"
            },
            "active": {
              "type": "boolean"
            },
            "modificationDate": {
              "type": "string"
            },
            "modificationUser": {
              "type": "array",
              "items": {
                "$ref": "../multiple/common-schema.json#/definitions/id"
              },
              "minItems": 1,
              "uniqueItems": true
            }
          }
        },
        "systemDomain": {
          "type": "string"
        },
        "defaultDomain": {
          "type": "string"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string"
            },
            "googleAnalytics": {
              "type": "string"
            },
            "googleMap": {
              "type": "string"
            },
            "pubId": {
              "type": "string"
            },
            "keywords": {
              "type": "string"
            }
          }
        },
        "vanityUrls": {
          "type": "array",
          "items": {
            "$ref": "#dep-domain-url"
          }
        }
      }
    },
    "url": {
      "$id": "#dep-domain-url",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string"
        }
      }
    }
  }
}