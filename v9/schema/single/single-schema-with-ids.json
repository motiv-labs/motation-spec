{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of a Mutation file",
  "type": "object",
  "required": [
    "systems",
    "definition",
    "contents",
    "audit",
    "key"
  ],
  "properties": {
    "systems": {
      "type": "array",
      "items": {
        "$ref": "#global-system"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "languages": {
          "type": "array",
          "items": {
            "$ref": "#dep-language"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#dep-tag"
          },
          "uniqueItems": true
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#dep-category"
          },
          "uniqueItems": true
        },
        "relationships": {
          "type": "array",
          "items": {
            "$ref": "#dep-relationship"
          },
          "uniqueItems": true
        }
      }
    },
    "definition": {
      "type": "object",
      "required": [
        "id",
        "properties",
        "fields"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "type": "object",
          "$ref": "#def-properties"
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#def-field"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    },
    "contents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "properties",
          "versions"
        ],
        "properties": {
          "id": {
            "type": "array",
            "items": {
              "$ref": "#common-id"
            },
            "uniqueItems": true
          },
          "properties": {
            "type": "object",
            "$ref": "#content-properties"
          },
          "versions": {
            "type": "array",
            "items": {
              "$ref": "#content-version"
            },
            "minItems": 1,
            "uniqueItems": true
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "audit": {
      "type": "array",
      "items": {
        "$ref": "#global-audit"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "key": {
      "required": [
        "fields"
      ],
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#key-field"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  },
  "definitions": {
    "id": {
      "$id": "#common-id",
      "required": [
        "value"
      ],
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "$id": "#common-metadata",
      "properties": {
        "items": {
          "type": "array"
        }
      }
    },
    "system": {
      "$id": "#common-system",
      "properties": {
        "items": {
          "type": "array"
        }
      }
    },
    "properties": {
      "$id": "#def-properties",
      "required": [
        "uniqueName",
        "type"
      ],
      "properties": {
        "uniqueName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "Content",
            "Widget",
            "Form",
            "File",
            "Page",
            "Persona"
          ]
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        },
        "parent": {
          "type": "object",
          "$ref": "#def-parent"
        },
        "metadata": {
          "type": "object",
          "$ref": "#common-metadata"
        },
        "system": {
          "type": "object",
          "$ref": "#common-system"
        }
      }
    },
    "parent": {
      "$id": "#def-parent",
      "properties": {
        "type": {
          "enum": [
            "Site",
            "Folder"
          ]
        },
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        }
      },
      "required": [
        "type",
        "id"
      ],
      "additionalProperties": false
    },
    "fullMetadata": {
      "$id": "#def-fullMetadata",
      "required": [
        "key",
        "value"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "validation": {
      "$id": "#def-validation",
      "properties": {
        "name": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "minLength": {
          "type": "number"
        },
        "maxLength": {
          "type": "number"
        },
        "regex": {
          "type": "string"
        }
      }
    },
    "constraint": {
      "$id": "#def-constraint",
      "properties": {
        "unique": {
          "type": "boolean"
        },
        "readOnly": {
          "type": "boolean"
        },
        "fixed": {
          "type": "boolean"
        }
      }
    },
    "display": {
      "$id": "#def-display",
      "properties": {
        "showInList": {
          "type": "boolean"
        },
        "searchable": {
          "type": "boolean"
        },
        "hint": {
          "type": "string"
        }
      }
    },
    "dataType": {
      "$id": "#def-dataType",
      "enum": [
        "String",
        "BigString",
        "Boolean",
        "Int",
        "BigInt",
        "Float",
        "Date",
        "Time",
        "DateTime"
      ]
    },
    "field": {
      "$id": "#def-field",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "fieldType",
            "name"
          ],
          "properties": {
            "dataType": {
              "type": "string",
              "$ref": "#def-dataType"
            },
            "fieldType": {
              "enum": [
                "Text",
                "Category",
                "Checkbox",
                "Constant",
                "Custom",
                "Date",
                "Datetime",
                "File",
                "Hidden",
                "Site",
                "Image",
                "KeyValue",
                "Divider",
                "Select",
                "Multiselect",
                "Tab",
                "Radio",
                "Relationship",
                "RelationshipTab",
                "Permission",
                "Tag",
                "Textarea",
                "Binary",
                "Time",
                "WYSIWYG",
                "Row",
                "Column"
              ]
            },
            "validations": {
              "type": "array",
              "items": {
                "$ref": "#def-validation"
              },
              "uniqueItems": true
            },
            "constraints": {
              "type": "array",
              "items": {
                "$ref": "#def-constraint"
              },
              "uniqueItems": true
            },
            "display": {
              "type": "array",
              "items": {
                "$ref": "#def-display"
              },
              "uniqueItems": true
            },
            "system": {
              "type": "object",
              "$ref": "#common-system"
            },
            "metadata": {
              "type": "array",
              "items": {
                "$ref": "#def-fullMetadata"
              },
              "uniqueItems": true
            },
            "uniqueName": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "description": {
              "type": "string"
            },
            "setUpData": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "defaultValue": {
              "type": "string"
            },
            "creationDate": {
              "type": "string"
            },
            "modificationDate": {
              "type": "string"
            }
          }
        }
      }
    },
    "storage": {
      "$id": "#content-storage",
      "required": [
        "bucket",
        "md5"
      ],
      "properties": {
        "bucket": {
          "type": "string"
        },
        "md5": {
          "type": "string"
        }
      }
    },
    "status": {
      "$id": "#content-status",
      "enum": [
        "Live",
        "Working",
        "Deleted"
      ]
    },
    "content-properties": {
      "$id": "#content-properties",
      "required": [
        "definitionId",
        "name",
        "type",
        "path"
      ],
      "properties": {
        "type": {
          "enum": [
            "Content",
            "Page",
            "Folder"
          ]
        },
        "status": {
          "$ref": "#content-status"
        },
        "languageId": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "definitionId": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "system": {
          "type": "object",
          "$ref": "#common-system"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "version": {
      "$id": "#content-version",
      "required": [
        "id",
        "properties",
        "fields"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "properties": {
          "properties": {
            "status": {
              "$ref": "#content-status"
            },
            "title": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "metadata": {
              "type": "object",
              "$ref": "#common-metadata"
            },
            "system": {
              "type": "object",
              "$ref": "#common-system"
            },
            "creationDate": {
              "type": "string"
            },
            "modificationDate": {
              "type": "string"
            },
            "modificationUser": {
              "type": "array",
              "items": {
                "$ref": "#common-id"
              },
              "uniqueItems": true
            }
          }
        },
        "fields": {
          "$id": "#content-fields",
          "type": "array",
          "items": {
            "$ref": "#content-field"
          },
          "uniqueItems": true
        }
      }
    },
    "content-field": {
      "$id": "#content-field",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "value": {
          "type": "string"
        },
        "storage": {
          "type": "object",
          "$ref": "#content-storage"
        }
      }
    },
    "relationship": {
      "$id": "#dep-relationship",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "uniqueName",
            "parentId",
            "childId",
            "cardinality"
          ],
          "properties": {
            "uniqueName": {
              "type": "string"
            },
            "parentId": {
              "type": "array",
              "items": {
                "$ref": "#common-id"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "parentName": {
              "type": "string"
            },
            "childId": {
              "type": "array",
              "items": {
                "$ref": "#common-id"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "childName": {
              "type": "string"
            },
            "cardinality": {
              "type": "string"
            },
            "system": {
              "type": "object",
              "$ref": "#common-system"
            }
          },
          "relations": {
            "type": "array",
            "items": {
              "$ref": "#dep-relation"
            },
            "uniqueItems": true
          }
        }
      }
    },
    "relation": {
      "$id": "#dep-relation",
      "required": [
        "parent",
        "child"
      ],
      "properties": {
        "parent": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "child": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "order": {
          "type": "integer"
        }
      }
    },
    "category": {
      "$id": "#dep-category",
      "required": [
        "id",
        "properties"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "properties": {
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "uniqueName": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "system": {
              "type": "object",
              "$ref": "#common-system"
            },
            "modificationDate": {
              "type": "string"
            }
          }
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#dep-category"
          },
          "uniqueItems": true
        }
      }
    },
    "tag": {
      "$id": "#dep-tag",
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "system": {
          "type": "object",
          "$ref": "#common-system"
        },
        "modificationUser": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "uniqueItems": true
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "language": {
      "$id": "#dep-language",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "language": {
          "type": "string"
        },
        "languageCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "countryCode": {
          "type": "string"
        }
      }
    },
    "global-system": {
      "$id": "#global-system",
      "required": [
        "name",
        "date"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "global-audit": {
      "$id": "#global-audit",
      "required": [
        "date"
      ],
      "properties": {
        "user": {
          "type": "object",
          "$ref": "#global-user"
        },
        "date": {
          "type": "string"
        }
      }
    },
    "global-user": {
      "$id": "#global-user",
      "properties": {
        "id": {
          "type": "object",
          "$ref": "#common-id"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "key-field": {
      "$id": "#key-field",
      "required": [
        "name",
        "id"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "id": {
          "type": "array",
          "items": {
            "$ref": "#common-id"
          },
          "minItems": 1,
          "uniqueItems": true
        }
      }
    }
  }
}