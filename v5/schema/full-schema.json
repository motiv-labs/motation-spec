{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://json-schema.org/draft/2019-09/output/schema",
  "description": "A schema that validates the structure of a Mutation file",

  "type": "object",
  "required": [ "systems","definitions","contents", "audit"],

  "properties": {

    "systems": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/system"
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "definitions": {
      "type": "array",
      "items": {
        "$ref": "definition-schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "contents": {
      "type": "array",
      "items": {
        "$ref": "content-schema.json"
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "audit": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/audit"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },

  "definitions": {

    "system": {
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "date"
      ],
      "additionalProperties": false
    },

    "audit" : {
      "required": ["date"],
      "properties": {
        "user": {
          "type": "object",
          "$ref": "#/definitions/user"
        },
        "date": {
          "type": "string"
        }
      }
    },

    "user": {
      "properties": {
        "id": {
          "type": "object",
          "$ref": "#/definitions/id"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },

    "id": {
      "required": ["value"],
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    }
  }

}