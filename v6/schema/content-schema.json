{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://json-schema.org/draft/2019-09/output/schema",
  "description": "A schema that validates the structure of a Motation Content",
  "type": "object",
  "required": [
    "id",
    "properties",
    "versions"
  ],
  "properties": {
    "id": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/id"
      },
      "uniqueItems": true
    },
    "properties": {
      "type": "object",
      "$ref": "#/definitions/properties"
    },
    "versions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/version"
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "definitions": {
    "id": {
      "required": [
        "value"
      ],
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "language": {
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/id"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "language": {
          "type": "string"
        },
        "languageCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "countryCode": {
          "type": "string"
        }
      }
    },
    "storage": {
      "required": [
        "bucket",
        "md5"
      ],
      "properties": {
        "bucket": {
          "type": "string"
        },
        "md5": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "properties": {
        "items": {
          "type": "array"
        }
      }
    },
    "system": {
      "properties": {
        "items": {
          "type": "array"
        }
      }
    },
    "status": {
      "enum": [
        "Live",
        "Working",
        "Deleted"
      ]
    },
    "properties": {
      "required": [
        "definitionId",
        "name",
        "type",
        "path"
      ],
      "properties": {
        "type": {
          "enum": [
            "Content",
            "Page",
            "Folder"
          ]
        },
        "status": {
          "$ref": "#/definitions/status"
        },
        "language": {
          "type": "object",
          "$ref": "#/definitions/language"
        },
        "definitionId": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/id"
          },
          "uniqueItems": true
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "site": {
          "type": "string"
        },
        "system": {
          "type": "object",
          "$ref": "#/definitions/system"
        },
        "creationDate": {
          "type": "string"
        },
        "modificationDate": {
          "type": "string"
        }
      }
    },
    "version": {
      "required": [
        "id",
        "properties",
        "fields"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/id"
          },
          "uniqueItems": true
        },
        "properties": {
          "properties": {
            "status": {
              "$ref": "#/definitions/status"
            },
            "title": {
              "type": "string"
            },
            "order": {
              "type": "integer"
            },
            "metadata": {
              "type": "object",
              "$ref": "#/definitions/metadata"
            },
            "system": {
              "type": "object",
              "$ref": "#/definitions/system"
            },
            "creationDate": {
              "type": "string"
            },
            "modificationDate": {
              "type": "string"
            },
            "modificationUser": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/id"
              },
              "uniqueItems": true
            }
          }
        },
        "fields": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/field"
          },
          "uniqueItems": true
        }
      }
    },
    "field": {
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/id"
          },
          "uniqueItems": true
        },
        "value": {
          "type": "string"
        },
        "storage": {
          "type": "object",
          "$ref": "#/definitions/storage"
        }
      }
    }
  }
}