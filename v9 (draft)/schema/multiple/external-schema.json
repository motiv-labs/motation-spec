{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A schema that validates the structure of Motation external dependencies elements",
  "type": "object",
  "properties": {
    "contents": {
      "type": "array",
      "items": {
        "$ref": "#ext-contents"
      },
      "uniqueItems": true
    }
  },
  "definitions": {
    "content": {
      "$id": "#ext-contents",
      "required": [
        "bucket",
        "md5"
      ],
      "properties": {
        "bucket": {
          "type": "string"
        },
        "md5": {
          "type": "string"
        }
      }
    }
  }
}